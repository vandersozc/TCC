<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:background="@color/background"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:background="@drawable/ic_launcher_background" >

            <TextView
                android:id="@+id/text_nome_app_form_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:contentDescription="@string/text_value_eplants"
                android:text="@string/text_value_eplants"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/cinza" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.02"
        android:background="@color/verde_claro" >
        
        <ImageButton
            android:id="@+id/ic_action_buscar_form_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/ic_action_listar_form_main"
            android:layout_marginLeft="22dp"
            android:background="@color/verde_claro"
            android:contentDescription="@string/text_value_buscar"
            android:src="@drawable/ic_action_buscar_branco" />

        <ImageButton
            android:id="@+id/ic_action_listar_form_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/verde_claro"
            android:contentDescription="@string/text_value_listar"
            android:src="@drawable/ic_action_listar" />

        <ImageButton
            android:id="@+id/ic_action_salvar_form_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="22dp"
            android:background="@color/verde_claro"
            android:contentDescription="@string/text_value_salvar"
            android:src="@drawable/ic_action_menu_novo" />
        
    </RelativeLayout>

</LinearLayout>